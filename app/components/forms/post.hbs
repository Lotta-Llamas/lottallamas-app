<form class="space-y-8">
	<div class="space-y-8">
		<div>
			<div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
				<div class="sm:col-span-4">
					<label for="title" class="block text-sm font-medium text-gray-700">Title</label>
					<div class="mt-1 flex rounded-md shadow-sm">
						<Input @value={{@post.title}} @type="text" name="title" id="title" autocomplete="title" class="block w-full min-w-0 flex-1 rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
					</div>
				</div>

				<div class="sm:col-span-6">
					<label for="content" class="block text-sm font-medium text-gray-700">Content</label>
					<div class="mt-1">
						<Textarea @value={{@post.text}}  id="content" name="content" rows="15" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="pt-5">
		<div class="flex">
			<div class="grow">
				{{#if @isDeletable}}
					<button {{on 'click' this.delete}} type="button" class="inline-flex items-center justify-center rounded-md border border-transparent bg-red-100 px-4 py-2 font-medium text-red-700 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 sm:text-sm">Delete post</button>
				{{/if}}
			</div>
			<div class="float-right">
				<button {{on 'click' this.cancel}} type="button" class="rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Cancel</button>
				<button {{on 'click' this.save}} type="submit" class="ml-3 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Save</button>
			</div>
		</div>
	</div>
</form>