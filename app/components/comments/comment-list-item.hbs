<li class="py-4">
	<div class="flex space-x-3">
		<img class="h-6 w-6 rounded-full" src="https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=3&w=256&h=256&q=80" alt="profile">
		<div class="flex-1 space-y-1">
			<div class="flex items-center justify-between">
				<h3 class="text-sm font-medium">{{@comment.walletId}}</h3>
				{{#if this.canEdit}}
					<button {{on 'click' (fn this.edit @comment.id)}} type="submit">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
