{{#each @posts as |post|}}
	<LinkTo @route="post" @model={{post.id}}>
		<div class="flex justify-between space-x-3">
			<h1 class="text-xl">{{post.title}}</h1>
			<time datetime="2021-01-27T16:35" class="flex-shrink-0 whitespace-nowrap text-sm text-gray-500">{{post.createdAt}}</time>
		</div>
		<p class="wallet-id truncate text-sm text-gray-500">Posted By: {{post.walletId}}</p>
		<div class="mt-1">
			<p class="post-text text-sm text-gray-600 line-clamp-2">{{post.text}}</p>
		</div>
	</LinkTo>
{{/each}}
