{{page-title "Post"}}
<Posts::Post @post={{@model.post}}/>

<Forms::Comment @comment={{@model}} @hasSaved={{this.hasSaved}} as |submit create discard delete isDisabled|>
	<div class="flex">
		<div class="grow">
			<div class="mt-2 ml-3 flex justify-end">
				<button {{on 'click' create}} disabled={{isDisabled}} class="{{if isDisabled 'opacity-25 '}}inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" type="button">Post</button>
			</div>
		</div>
	</div>
</Forms::Comment>

<Comments::CommentList
	@comments={{@model.comments}}
/>

{{outlet}}