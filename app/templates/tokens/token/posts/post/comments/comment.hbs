{{page-title "Comment"}}
<Modals::GenericModal as |modal|>
	<modal.context>
		<Forms::Comment @comment={{this.model}} />
	</modal.context>
	<modal.actions>
		<div class="flex">
			<div class="grow">
				<div class="mt-2 flex justify-end">
					<button class="inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" type="button" {{on 'click' this.closeEdit}}>Discard</button>
				</div>
			</div>
			<div>
				<div class="mt-2 ml-3 flex justify-end">
					<button class="inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" type="button" {{on 'click' this.submitComment }}>Post</button>
				</div>
			</div>
		</div>
	</modal.actions>
</Modals::GenericModal>